<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/relativeLayout">

                    <TextView
                        android:id="@+id/item_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="subject"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/item_data"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="data"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/item_subject"
                        android:layout_marginTop="5dp"/>


                <TextView
                        android:id="@+id/item_topic"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/line1"
                        android:layout_marginTop="5dp"
                        tools:text="topic"/>

                    <TextView
                        android:id="@+id/item_descriptions"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/item_topic"
                        android:layout_marginTop="10dp"
                        tools:text="descriptions"/>

                    <TextView
                        android:id="@+id/item_status"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="status"
                        android:layout_below="@+id/item_descriptions"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/item_status"
                        android:layout_marginTop="5dp"/>

                <TextView
                        android:id="@+id/item_price"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="price"
                        android:layout_below="@+id/line2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/item_count"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="count"
                        android:layout_below="@+id/line2"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/item_remove_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/item_count"
                    android:layout_marginTop="13dp"
                    android:text="@string/layout_remove" />

                <Button
                    android:id="@+id/item_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/item_remove_btn"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/item_remove_btn"
                    android:layout_toStartOf="@+id/item_remove_btn"
                    android:text="@string/layout_edit" />


            </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>